const express = require("express");
const controller = require("../controllers/userController");
const router = express.Router();

router.post("/create", controller.create);
router.delete("/delete/:id", controller.delete);
router.delete("/deleteAll", controller.deleteAll);
router.get("/getUser", controller.getAll);
router.get("/user/:id", controller.getById);
router.patch("/update/:id", controller.updateUser);
router.patch("/updatePic", controller.updatePic);
router.patch("/updatePicx", controller.updatePicx);
router.patch("/updateId", controller.updateId);

module.exports = router;
